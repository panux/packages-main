packages:
  sl:
    dependencies:
    - musl
    - ncurses
version: 5.02
builddependencies:
- gcc
- libc-dev
- ncurses-dev
sources:
- https://codeload.github.com/mtoyoda/sl/tar.gz/{{.Version}}
script:
- mv src/{{.Version}} sl.tar.gz
- tar -xf sl.tar.gz
- mv sl-{{.Version}} sl
- $(MAKE) -C sl
- mkdir -p out/sl/usr/bin
- mv sl/sl out/sl/usr/bin/sl
