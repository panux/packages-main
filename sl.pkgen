packages:
  sl:
    dependencies:
    - musl
version: 5.02
builddependencies:
- gcc
- libc-dev
sources:
- https://github.com/mtoyoda/sl/archive/{{.Version}}.tar.gz
script:
- tar -xf src/sl-{{.Version}}.tar.gz
- mv sl-{{.Version}} sl
- $(MAKE) -C sl
- mkdir -p out/sl/usr/bin
- mv sl/sl out/sl/usr/bin/sl
