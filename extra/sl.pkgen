packages:
  sl:
    dependencies:
    - musl
    - ncurses
version: 5.02
builddependencies:
- gcc
- libc-dev
- ncurses-dev
sources:
- https://codeload.github.com/mtoyoda/sl/tar.gz/{{.Version}}
script:
- |
  mv src/{{.Version}} src/sl-{{.Version}}.tar.gz
  {{extract "sl" "gz"}}
  $(MAKE) -C sl
  mkdir -p out/sl/usr/bin
  mv sl/sl out/sl/usr/bin
