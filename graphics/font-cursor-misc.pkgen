packages:
  font-cursor-misc:
    dependencies:
    - encodings
    - font-alias
    - mkfontscale
    - mkfontdir
    - font-cursor-misc
version: 1.0.3
builddependencies:
- font-util-dev
- bdftopcf
- mkfontdir
sources:
- https://www.x.org/releases/individual/font/font-cursor-misc-{{.Version}}.tar.bz2
script:
- tar -xf src/font-cursor-misc-{{.Version}}.tar.bz2
- mv font-cursor-misc-{{.Version}} font-cursor-misc
- (cd font-cursor-misc&& ./configure --prefix=/usr)
- $(MAKE) -C font-cursor-misc
- $(MAKE) -C font-cursor-misc DESTDIR=$(shell pwd)/out/font-cursor-misc install
