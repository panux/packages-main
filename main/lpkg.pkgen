packages:
  lpkg:
    dependencies:
    - busybox
    - minisign
    - lua
version: v0.2-alpha
sources:
- git://github.com/panux/lpkg
script:
- mkdir -p out/lpkg/usr/bin out/lpkg/etc/lpkg/db
- sed 's/\t//g' src/lpkg/lpkg.lua
- sed 's/\n\n/\n/g' src/lpkg/lpkg.lua
- install -m 0700 src/lpkg/lpkg.lua out/lpkg/usr/bin/lpkg
