packages:
  xinit:
    dependencies:
version: 1.3.4
builddependencies:
- xauth
- mcookie
- xmodmap
- xrdb
- libx11-dev
sources:
- https://www.x.org/releases/individual/app/xinit-{{.Version}}.tar.bz2
script:
- tar -xf src/xinit-{{.Version}}.tar.xz
- mv xinit-{{.Version}} xinit
- (cd xinit && ./configure --build={{.Arch}}-pc-linux-gnu --prefix=/usr --sysconfdir=/etc	--mandir=/usr/share/man	--localstatedir=/var --with-xinitdir=/etc/X11/xinit)
- $(MAKE) -C xinit
- $(MAKE) -C xinit DESTDIR=$(shell pwd)/out/xinit install
