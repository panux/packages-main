packages:
  ethtool:
    dependencies:
version: 4.11
builddependencies:
- build-base
- linux-headers
sources:
- https://www.kernel.org/pub/software/network/ethtool/ethtool-{{.Version}}.tar.xz
script:
- tar -xf src/ethtool-{{.Version}}.tar.xz
- mv ethtool-{{.Version}} ethtool
- (cd ethtool && ./configure)
- $(MAKE) -C ethtool
- $(MAKE) -C ethtool DESTDIR=$(shell pwd)/out/ethtool install
- mv out/ethtool/usr/local/* out/ethtool/usr/
