packages:
  dhcpcd:
    dependencies:
version: 6.11.5
builddependencies:
- build-base
- linux-headers
sources:
- https://roy.marples.name/downloads/dhcpcd/dhcpcd-{{.Version}}.tar.xz
script:
- tar -xf src/dhcpcd-{{.Version}}.tar.xz
- mv dhcpcd-{{.Version}} dhcpcd
- (cd dhcpcd && ./configure --build={{.Arch}}-pc-linux-gnu --libexecdir=/lib/dhcpcd --dbdir=/var/lib/dhcpcd)
- $(MAKE) -C dhcpcd
- $(MAKE) -C dhcpcd DESTDIR=$(shell pwd)/out/dhcpcd install
