packages:
  perl:
    dependencies:
version: 5.26.0
builddependencies:
- gcc
- libc-dev
- ncurses-dev
- gdbm-dev
- db-dev
sources:
- https://www.cpan.org/src/5.0/perl-{{.Version}}.tar.gz
script:
- tar -xf src/perl-{{.Version}}.tar.gz
- mv perl-{{.Version}} perl
- (cd perl && sh Configure -des)
- $(MAKE) -C perl
- $(MAKE) -C perl DESTDIR=$(shell pwd)/out/perl install
