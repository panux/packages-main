packages:
  perl:
    dependencies:
version: 5.26.0
builddependencies:
- gcc
- libc-dev
- ncurses-dev
- gdbm-dev
- db-dev
- perl-utils
- binutils
sources:
- https://www.cpan.org/src/5.0/perl-{{.Version}}.tar.gz
script:
- tar -xf src/perl-{{.Version}}.tar.gz
- mv perl-{{.Version}} perl
- (cd perl && sh Configure -des -Dprefix=/usr -Dvendorprefix=/usr -Dman1dir=/usr/share/man/man1 -Dman3dir=/usr/share/man/man3 -Dpager="/usr/bin/less -isR" -Duseshrplib -Dusethreads)
- $(MAKE) -C perl libperl.so
- $(MAKE) -C perl
- $(MAKE) -C perl DESTDIR=$(shell pwd)/out/perl install
